extends ../layout

block content
  h1= title
  .actions
    a(href=`${team.url}/update`) Edit
    a(href=`${team.url}/delete`) Delete
  p #[b Location:] #{ team.location }
  p #[b Established:] #{ team.established_year }
  if team.logo
    img.image(src=team.logo, alt='Team logo')
  h2 Players
  ul.entry-list
    each player in players
      li
        .player-headline
          h3 #[a(href=player.url) #{ player.full_name }] 
          p ##{ player.number }
        p #[b Position:] #{ player.position_name }
